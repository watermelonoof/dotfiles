#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "kitty" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) dunstify -a "sb-internet" -u low -r 6666 -t 10000 "ðŸŒ Internet module" "Click to connect
ó°¤®  wifi disabled
ó°¤­  no wifi connection
ó°¤¨  wifi connected
ó°ˆ€  ethernet working
ó°Œ¾  vpn is active
" ;;
	6) "kitty" -e "nvim" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	# wifiicon="$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
	stat="$(cat /proc/net/wireless)"
	wifiicon="$(echo "$stat" | awk '/^\s*w/ { print ($4 >= -55 ? "ó°¤¨ " : $4 >= -66 ? "ó°¤¥ " : $4 >= -77 ? "ó°¤¢ " : $4 >= -88 ? "ó°¤Ÿ " : "ó°¤¯ ")}')"
	ssid="$(iw dev $(echo "$stat" | grep '^\s*w' | cut -d: -f1) link | awk '/SSID:/ { print $2 " " }')"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ó°¤­ " || wifiicon="ó°¤® "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ó°ˆ€ " # || ethericon="ó°ˆ‚"

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ó°Œ¾ "

printf "%s%s%s%s\n" "$tunicon" "$ethericon" "$wifiicon" "$ssid"
