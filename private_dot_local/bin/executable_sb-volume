#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid -w -f pavucontrol; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
	2) changevol mute ;;
	4) changevol up 1 ;;
	5) changevol down 1 ;;
	3) dunstify -a "sb-volume" -u low -r 1111 -t 10000 "üì¢ Volume module" "\- Shows volume Û∞ïæ, Û∞ùü if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "kitty" -e "nvim" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print Û∞ùü and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo "Û∞ùü" && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 75)) ) icon="Û∞ïæ" ;;
	$((vol >= 10)) ) icon="Û∞ñÄ" ;;
	$((vol >= 0)) ) icon="Û∞ïø" ;;
	* ) echo "Û∞ùü" && exit ;;
esac

echo "$icon$vol%"
