#!/bin/sh

case $BLOCK_BUTTON in
	1) dunstify -a "sb-memory" -u low -r 3333 -t 10000 "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	2) setsid -f "$kitty" -e htop ;;
	3) dunstify -a "sb-memory" -u low -r 3333 -t 10000 "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "kitty" -e "nvim" "$0" ;;
esac

free --mebi | sed -n '2{p;q}' | awk '{printf ("ó°§‘%2.2fGiB/%2.2fGiB\n", ( $3 / 1024), ($2 / 1024))}'
