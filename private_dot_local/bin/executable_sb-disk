#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) dunstify -a "sb-disk" -u low -r 5555 -t 10000 "ğŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;
	3) dunstify -a "sb-disk" -u low -r 5555 -t 10000 "ğŸ’½ Disk module" "\- Shows used hard drive space.
- Click to show all disk info." ;;
	6) "kitty" -e "nvim" "$0" ;;
esac

# case "$location" in
# 	"/home"* ) icon="ğŸ " ;;
# 	"/mnt"* ) icon="ğŸ’¾" ;;
# 	*) icon="ğŸ–¥";;
# esac

printf "%s%s\n" "ó°†¼" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"
